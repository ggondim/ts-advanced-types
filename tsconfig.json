{
	"include": ["./index.ts"],
	"compilerOptions": {
		"outDir": "./dist",

    // Type checking
    "experimentalDecorators": true,
		"noImplicitAny": false,
		"skipLibCheck": true,

		// Output
		"target": "ES2020",
		"lib": ["ES2023", "DOM"],
    "declaration": true,
		"allowJs": true,
    "noEmitOnError": true,
    "removeComments": false,
		"inlineSourceMap": true,
		"inlineSources": false,

    // Module resolution
		"module": "CommonJS",
		//"moduleDetection": "auto",
		"moduleResolution": "node",
		"esModuleInterop": true,
		//"verbatimModuleSyntax": true,
    "resolveJsonModule": true,
	},
  "exclude": ["scripts", "node_modules", "dist", "**/dist", "**/package.json", "**/*.d.ts"],
}
